SELECT p.player_name, p.season, t.team_name, gg.MaxPts FROM players p INNER JOIN teams t ON p.team_id=t.team_id INNER JOIN (SELECT player_id, player_name, MAX(pts) AS MaxPts FROM game_details GROUP BY player_id, player_name) gp on p.player_id=gp.player_id INNER JOIN (SELECT game_id, MAX(pts) AS MaxPts FROM game_details GROUP BY game_id) gg ON gg.MaxPts=gp.MaxPts WHERE p.player_name LIKE '%Antetokounmpo%' GROUP BY p.player_name, p.player_name, p.season, t.team_name, gg.MaxPts;